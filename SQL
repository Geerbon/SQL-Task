CREATE DATABASE BankDB
Use [BankDB]
GO

Create table dbo.Bank(
ID int NOT NULL Primary key IDENTITY,
BankName nvarchar(30) NOT NULL
)

insert into Bank
values
('Альфа-Банк'),
('Сбербанк'),
('Беларусбанк'),
('Белинвестбанк'),
('МТБанк')

Create table dbo.City(
ID int NOT NULL Primary key IDENTITY,
City nvarchar(30) NOT NULL,
)

insert into City
values
('Гомель'),
('Минск'),
('Брест'),
('Витебск'),
('Пинск')



  Create table dbo.Branch(
ID int NOT NULL Primary key IDENTITY,
BankID int not null FOREIGN KEY REFERENCES Bank(ID) ON DELETE CASCADE,
CityID int not null FOREIGN KEY REFERENCES City(ID) ON DELETE CASCADE,
BranchNumber nvarchar(40) NOT NULL
)

insert into Branch(BankID,CityID,BranchNumber)
